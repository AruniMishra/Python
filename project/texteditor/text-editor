import sys
from tkinter import *
from tkinter import filedialog

root = Tk("Text Editor")
text = Text(root)
text.grid()


def saveas():
    global text
    t = text.get("1.0", "end-1c")
    savelocation = filedialog.asksaveasfilename()
    if (savelocation is not None) and (len(savelocation)):
        print(f'savelocation:{savelocation}!')
        file1 = open(savelocation, "w+")
        file1.write(t)
        file1.close()


button = Button(root, text="Save", command=saveas)
button.grid()


def font_courier():
    global text
    text.config(font="Courier")

def font_consolas():
    global text
    text.config(font="Consolas")


font = Menubutton(root, text="Font")
font.grid()
font.menu = Menu(font, tearoff=0)
font["menu"] = font.menu
Helvetica = IntVar()
arial = IntVar()
times = IntVar()
Courier = IntVar()
Consolas = IntVar()
font.menu.add_checkbutton(label="Courier", variable=Courier,
                          command=font_courier)
font.menu.add_checkbutton(label="Consolas", variable=Consolas,
                          command=font_consolas)
root.mainloop()
